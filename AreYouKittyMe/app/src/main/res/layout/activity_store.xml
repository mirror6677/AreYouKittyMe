<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.areyoukittyme.StoreActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:columnCount="2"
        android:columnWidth="320dp"
        android:orientation="vertical"
        android:rowCount="2"
        android:stretchMode="columnWidth"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <!--<LinearLayout-->
            <!--android:id="@+id/topleft"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="160dp"-->
            <!--android:layout_row="0"-->
            <!--android:layout_weight="0.34"-->
            <!--android:background="@drawable/shape">-->
        <!--</LinearLayout>-->

        <GridView
            android:id="@+id/topleft"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/shape"
            android:columnWidth="45dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />


        <LinearLayout
            android:id="@+id/topright"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="0.33"
            android:background="@drawable/shape">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/currentCashContainer"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/currentCashLbl"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:text="Current Cash: "
                android:layout_weight="0.13"></TextView>

            <TextView
                android:id="@+id/currentCashAmount"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:text="AMOUNT "
                android:layout_weight="0.28"></TextView>

            <Button
                android:id="@+id/AddCashTempBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:text="Add Cash" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myCash"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/myCashLbl"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:text="Current Cash: "
                android:layout_weight="0.13"></TextView>

            <TextView
                android:id="@+id/myCashAmount"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:text="AMOUNT "
                android:layout_weight="0.28"></TextView>

        </LinearLayout>

        <Button
            android:id="@+id/backToMainBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.34"
            android:text="Back to Main page" />


    </LinearLayout>
    </android.support.constraint.ConstraintLayout>
