<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cat_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is default text. Hopefully it changes."
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/miaomiaomiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat_name_display"
        android:layout_marginTop="27dp"
        android:visibility="visible"
        app:srcCompat="@drawable/broccoli" />

    <Button
        android:id="@+id/toSlidePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/miaomiaomiao"
        android:layout_marginStart="86dp"
        android:layout_marginTop="10dp"
        android:text="Button" />

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager_temp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="invisible"></android.support.v4.view.ViewPager>


</RelativeLayout>
