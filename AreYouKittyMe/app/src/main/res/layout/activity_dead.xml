<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.areyoukittyme.DeadActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Kitty is Dead..."
        android:textSize="32sp"
        android:textAlignment="center"
        android:padding="40sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/skeleton"
        android:id="@+id/imageView"
        android:padding="75sp" />

    <Button
        android:text="Revive for $5.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/revive_cat"
        android:onClick="restartGame"
        android:background="@color/colorPrimaryLight"
        android:textColor="#FFDDF0E9"
        android:padding="9dp"
        android:textSize="16sp"
        android:layout_above="@+id/readopt_cat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp" />


    <Button
        android:text="Adopt a new Cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readopt_cat"
        android:background="@color/colorAccentLight"
        android:textColor="#FFDDF0E9"
        android:padding="9dp"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />




</RelativeLayout>
