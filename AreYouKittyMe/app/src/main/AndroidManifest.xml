<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.android.areyoukittyme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AdoptActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".StatsActivity">
        </activity>
        <activity android:name=".StoreActivity">
        </activity>
        <activity android:name=".VocabActivity"

            android:label="@string/app_name"
            android:parentActivityName=".VocabActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".VocabActivity"/>
        </activity>
        <activity android:name=".VocabReviewActivity"

            android:label="@string/app_name"
            android:parentActivityName=".VocabStudyActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".VocabReviewActivity"/>
        </activity>
        <activity android:name=".VocabStudyActivity"

            android:label="@string/app_name"
            android:parentActivityName=".VocabStudyActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".VocabStudyActivity"/>
        </activity>
        <activity android:name=".TimerActivity">
        </activity>
    </application>

</manifest>